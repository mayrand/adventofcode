{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Deno Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": ["test", "--inspect-brk", "-A"],
      "outputCapture": "std",
      "attachSimplePort": 9229
    },
    {
      "name": "Debug Specific Test File",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": ["test", "--inspect-brk", "-A", "${file}"],
      "outputCapture": "std",
      "attachSimplePort": 9229
    }
  ]
}
